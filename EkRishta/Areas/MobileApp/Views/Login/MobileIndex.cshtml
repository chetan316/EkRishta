@model Models.Login

@{
    Layout = null;
}
<meta name="viewport" content="width=device-width, maximum-scale=1.0, initial-scale=1.0, user-scalable=no, minimum-scale=1.0" />
<title>Matrimonial, Marriage, Matrimony Site – ekvivaah.com</title>
<link rel="icon" href="~/images/favicon.png" type="image/png" sizes="16x16">
<link href="https://fonts.googleapis.com/css?family=Roboto+Slab:300,400" rel="stylesheet">
<link href="~/Content/Mobile.css?rd=1" rel="stylesheet" />
@Styles.Render("~/bundles/css")


@{ Html.EnableClientValidation(); }
@using (Html.BeginForm("MobileLogin", "Login", new { Area = "MobileApp" }, FormMethod.Post))
{
    @*@Html.AntiForgeryToken()*@
    @Html.ValidationSummary(true)
    if (@ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger fade in">
            @ViewBag.ErrorMessage
        </div>
    }
    <style>
        body {
            padding-top: 0;
        }
    </style>
    <div class="bg-login">
        <img alt="ek vivaah " src="/images/banner2.jpg">
    </div>

    <div class="login-body">
        <div class="login-name">
            Login
        </div>


        <div class="input">
            <div class="picuser"><img alt="ek vivaah " src="/images/user.svg"> </div>
            @Html.TextBoxFor(a => a.MobileNo, htmlAttributes: new { @class = "form", @placeholder = "Enter Email Id or Mobile No", })
        </div>
        <div class="input">
            @Html.ValidationMessageFor(a => a.MobileNo)
        </div>
        <div class="input">
            <div class="picuser"><img alt="ek vivaah " src="/images/wellness.svg"> </div>
            @Html.TextBoxFor(a => a.LoginPassword, htmlAttributes: new { @class = "form", @placeholder = "Password", @type = "password" })
        </div>
        <div class="input">
            @Html.ValidationMessageFor(a => a.LoginPassword)
        </div>

        <div class="login-btn"> <input type="submit" value="Login" /> </div>
        @Html.ActionLink("Forgot Password", "ForgotPassword", "Login", new { Area = "MobileApp" }, null)


        <div class="login-btn HereREG">
            @Html.ActionLink("Register Here", "RegisterUser", "UserRegistration", new { Area = "MobileApp" }, null)
        </div>

    </div>

    <div class="Register">

    </div>


}


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
