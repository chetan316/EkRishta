@model Areas.Models.UserBasicDetails

<ul id="ulBasicLabels">
    <li><strong>Name </strong> <p>: @Model.UserFirstName @Model.UserLastName  </p>  </li>
    <li><strong>Profile Id  </strong> <p>: @Model.UserProfileId </p>  </li>
    <li><strong>Birth Date </strong> <p>: @Model.DOB </p>  </li>
    <li><strong>Age </strong> <p>:  @Model.UserAge</p>  </li>
    <li><strong>Gender </strong> <p>: @(Model.UserGender == "M" ? "Male" : "Female") </p>  </li>
    <li><strong>Maritial Status  </strong> <p> : @Model.UserMaritialStatus</p>  </li>
    <li><strong>Mother Tounge  </strong> <p> : @Model.MotherTounge</p>  </li>
    <li><strong>Email </strong> <p>: @Model.UserEmailId </p>  </li>
    <li><strong>Mobile No </strong> <p>: @Model.UserMobileNo</p>  </li>

</ul>

<ul id="ulBasicEdit" style="display:none;">
    <li>
        <strong>Name </strong>:
        @Html.TextBoxFor(m => m.UserFirstName, htmlAttributes: new { @id = "txtFirstName", @placeholder = "First Name", })
        @Html.TextBoxFor(m => m.UserLastName, htmlAttributes: new { @id = "txtLastName", @placeholder = "Last Name", })
    </li>
    <li><strong>Profile Id  </strong> <p>: @Model.UserProfileId </p>  </li>
    <li><strong>DOB </strong>:
        <div class="deta_sec">
            <div class="select_opt">  @Html.DropDownListFor(m => m.DOBDay, new SelectList(Model.DOBDayDetails, "Value", "Text"), htmlAttributes: new { @id = "ddlDOBDay", @name = "DOBDayValue", @class = " DOBddl", @onchange = "CalculateAge()" }) </div>
            <div class="select_opt"> @Html.DropDownListFor(m => m.DOBMonth, new SelectList(Model.DOBMonthDetails, "Value", "Text"), htmlAttributes: new { @id = "ddlDOBMonth", @class = " DOBddl", @onchange = "CalculateAge()" }) </div>
            <div class="select_opt"> @Html.DropDownListFor(m => m.DOBYear, new SelectList(Model.DOBYearDetails, "Value", "Text"), htmlAttributes: new { @id = "ddlDOBYear", @class = " DOBddl", @onchange = "CalculateAge()" }) </div>
            <div class="input"> <div class="picuser"><img alt="ek vivaah " src="/images/user2.svg"> </div></div>
        </div>
    </li>
    <li><strong>Age </strong> <p id="pUserAge">:  @Model.UserAge</p>  @Html.HiddenFor(m => m.UserAge, htmlAttributes: new { @id = "hdnAge" })</li>
    <li>
        <strong>Gender </strong>:
        @Html.DropDownListFor(m => m.UserGender, new SelectList(new List<object> {new {value="M",text="Male"},
                                                                            new { value="F",text="Female" } }, "value", "text"), htmlAttributes: new { @id = "ddlGender" })
    </li>
    <li><strong>Maritial Status</strong>:
        @Html.DropDownListFor(m => m.UserMaritialStatus, new SelectList(new List<object>{new {value="Unmarried",text = "Unmarried"},
                                                                                     new {value="Divorced",text="Divorced"},
                                                                                     new {value="Widow", text="Widow"},
                                                                                     new {value="Widower", text="Widower"}}, "value", "text", 1), htmlAttributes: new { @id = "ddlMaritialStatus" })
    </li>
    <li>
        <strong>Mother Tounge</strong>:
        @Html.DropDownListFor(m => m.LanguageId, new SelectList(Model.LanguageDetails,"Value","Text"), htmlAttributes: new { @id = "ddlMotherTounge" })
    </li>
    <li>
    <strong>Email </strong>:
    @Html.TextBoxFor(m => m.UserEmailId, htmlAttributes: new { @id = "txtEmail", @placeholder = "Enter Email"})
     </li>
    <li><strong>Mobile No </strong> <p>: @Model.UserMobileNo</p>  </li>

</ul>