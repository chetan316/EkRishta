@model IEnumerable<Models.Custom.UserMaster>

@{
    ViewBag.Title = "Shortlisted Profiles";
}

<script src="~/Scripts/CustomJs/ManageUser.js?rd=1"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="user_title Profile">
        <div class="back-arow"><a href="#"><img alt="ek vivaah" src="/images/back.svg"></a></div>
        <p>Shortlisted Profile</p>
    </div>
    <div id="divMessage"></div>
    <div class="maching-body">
        @{int ContactCount = 0;}

        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <div class="user_sec_@item.UserId">
                    <div class="user-bg">
                        <div class="Shield"> <img alt="ek vivaah " src="/images/wellness.svg"> </div>

                        <div class="ProfilePic profile_centre">
                            <img src="@item.ProfilePicPath" alt="ProfilePic" class="fl" />
                        </div>
                    </div>
                    <div class="user-details">
                        <strong> @item.FirstName @item.LastName</strong>
                    </div>
                    <div class="view-pro user_title">
                        <ul>
                            <li class="fourty">
                                @*<a href="#" onclick="ViewProfile('@item.UserId');"> View Profile </a>*@
                                @Html.ActionLink("View Profile", "ViewProfile", "User", new { UserId = item.UserId }, null)
                            </li>
                            <li class="fourty"><a href="#"> Photo <span> 9</span> </a> </li>
                            <li>
                                <a onclick="ShortlistProfile('@item.UserId','@item.IsShortlisted',this,'ShortlistedProfiles');">
                                    <div class="heart"></div>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="user-details">
                        <ul>
                            <li>@item.Age</li>
                            <li>@item.Height </li>
                            <li>@item.ReligionName </li>
                            <li>@item.CastName</li>
                            <li>@item.MotherTounge </li>
                            <li>@item.Degree </li>
                            <li>@item.Designation</li>
                            <li>
                                @if (item.ShareCount >= 50)
                                {
                                    ContactCount += 1;
                                    @item.MobileNo
                                }
                                else
                                {
                                    <span>View Contact</span>
                                }
                            </li>
                            <li> @item.CityName</li>

                        </ul>

                    </div>

                    <div class="action_sction">
                        <input type="button" value="Request" id="btnSendRequest_@item.UserId" onclick="SendRequest('@item.UserId');" class="btn action-btn btn-info" />
                        @*<input type="button" value="Request" id="btnShortlist_@item.UserId" onclick="ShortlistProfile('@item.UserId');" class="btn action-btn btn-info" />*@

                        <input type="button" value="Block" id="btnBlockRequest_@item.UserId" onclick="SendRequest('@item.UserId','Blocked');" class="btn action-btn btn-info" />
                    </div>
                </div>
                <div class="clearfix"></div>

            }
        }
        else
        {
            <div>No Request available!!!</div>
        }
    </div>
}
