@model IEnumerable<Models.Custom.UserMaster>
@{
    ViewBag.Title = "ProfileRequest";
}

<script src="~/Scripts/CustomJs/ManageUser.js?rd=1"></script>
<h2>Profile Request</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="divMessage"></div>
    <div class="col-xs-12 col-sm-4 col-md-4">
        @foreach (var item in Model)
        {
            <div class="MatchingProfilePic" style="margin-top:20px;">
                <img src="@item.ProfilePicPath" alt="ProfilePic" class="fl" />
            </div>
            <table>
                <tr>
                    <td>
                        <b>Name</b>&nbsp;:&nbsp;@item.FirstName @item.LastName
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Age</b>&nbsp;:&nbsp;@item.Age
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Height</b>&nbsp;:&nbsp;@item.Height
                    </td>
                <tr>
                    <td>
                        <b>Religion</b>&nbsp;:&nbsp;@item.ReligionName
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Community</b>&nbsp;:&nbsp;@item.CastName
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Mother Tounge</b>&nbsp;:&nbsp;@item.MotherTounge
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Education</b>&nbsp;:&nbsp;@item.Degree
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Profession</b>&nbsp;:&nbsp;@item.Designation
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Location</b>&nbsp;:&nbsp;@item.CityName
                    </td>
                </tr>
            </table>
            <div>
                <input type="button" value="@(item.RequestStatus == "A"?"Accepted":"Accept")" id="btnAcceptRequest_@item.UserId" onclick="AcceptRejectRequest('@item.UserId','Accepted');" class="btn btn-info @(item.RequestStatus == "A"?"disabled":"")" />
                <input type="button" value="@(item.RequestStatus == "R"?"Rejected":"Reject")" id="btnRejectRequest_@item.UserId" onclick="AcceptRejectRequest('@item.UserId','Rejected');" class="btn btn-info @(item.RequestStatus == "R"?"disabled":"")" />
            </div>
            <div class="clearfix"></div>

        }
    </div>
}

