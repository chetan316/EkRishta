@model Models.Custom.UserMaster

@{
    ViewBag.Title = "ViewProfile";
}
<link href="~/Content/lightgallery.css" rel="stylesheet">
<script src="~/Scripts/CustomJs/ManageUser.js?rd=@ViewBag.JSRefNo"></script>
<style>
    .user-bg {
        height: 400px;
        filter: blur(3px);
        -webkit-filter: blur(3px);
    }

    .user_sec {
        clear: both;
        overflow: hidden;
        margin-bottom: 10px;
        background: none;
        box-shadow: none;
        position: absolute;
        z-index: 9999;
        top: 67px;
        left: 21%;
    }

    .ProfilePic.profile_centre {
        width: 180px;
        height: 180px;
    }

    .user-pic-round {
        background-color: rgba(255, 255, 255, 0.70);
        margin: 0 auto;
        float: none;
        top: 67px;
        left: 26%;
        width: 200px;
        height: 200px;
        position: static;
        border-radius: 110px;
    }

    .user-details strong, .user-details p {
        color: #fff;
    }

    .user-details p {
        padding: 5px 0 6px 0;
    }

    .ProfilePic.profile_centre {
        left: 0;
        position: sticky;
        top: 10px;
    }

    .table .user-bg {
        margin-bottom: 0px;
        margin-top: -6px;
    }

    .photo-count, .photo-right {
        top: 25px;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="user_title Profile">
        <div class="back-arow"> <a href="#">  <img alt="ek vivaah " src="/images/back.svg"> </a></div>
        <p>Profile</p>
    </div>
    <div class="table">
        <div>
            <div class="user-bg">
                <input type="hidden" value="@Model.CoverImageName" id="hdnCoverImagePath" /> 
            </div>
            <div class="user_sec">
                <div class="user-pic-round">
                    <div class="ProfilePic profile_centre">
                        <img id="imgProfilePic" alt="Profile" src="@Model.ProfilePicPath" />
                    </div>
                </div>
                <div class="user-details">
                    <strong> @Model.FirstName @Model.LastName </strong>
                    <p> @Model.Field </p>
                </div>
            </div>
            <div class="action_sec">
                <div class="action-btn ">
                    <a id="btnCancelRequest_@Model.UserId" onclick="SendRequest('@Model.UserId');" style="@(Model.RequestStatus == "P" ? "display:block" : "display:none")">
                        <span>
                            <div class="m_icon">
                                <img src="/images/ignore-profile.svg" alt="ek vivaah">
                            </div>
                        </span>
                        Cancel
                    </a>
                    <a href="#" id="btnAcceptedRequest_@Model.UserId" style="@((Model.RequestStatus == "A") ? "display:block" : "display:none")">
                        <span>
                            <div class="m_icon">
                                <img src="/images/send-profile-view.svg" alt="Request">
                            </div>
                        </span> Accepted
                    </a>

                    <a id="btnSendRequest_@Model.UserId" onclick="SendRequest('@Model.UserId');" style="@((Model.RequestStatus == "C" || Model.RequestStatus == "N" || Model.RequestStatus == "R") ? "display:block" : "display:none")">
                        <span>
                            <div class="m_icon">
                                <img src="/images/send-profile-view.svg" alt="ek vivaah">
                            </div>
                        </span>
                        Request
                    </a>

                </div>
                <div class="action-btn ">
                    <a href="#" id="btnBlockRequest_@Model.UserId" onclick="SendRequest('@Model.UserId','Blocked');">
                        <span>
                            <div class="m_icon">
                                <img src="/images/ignore-profile.svg" alt="ignore">
                            </div>
                        </span> ignore
                    </a>
                </div>

                <div class="photo-right ">
                    
                        <a onclick="ShortlistProfile('@Model.UserId','@Model.IsShortlisted',this,'ViewProfile');">
                            <span>
                            </span>
                    <p id="pLike">@(Model.IsShortlisted == "S" ? "Unlike" : "Like")</p>
                    </a>
                </div>
            </div>

            <div class="photo-count">
                <span> @Model.PhotoCount </span>
                <p> Photo</p>
            </div>
            <div class="clearfix"></div>
            <div class="user_title"><span> <img alt="matrimonial ek vivaah" src="/images/user.svg"></span> <p> Basic Details</p></div>

            <div class="details">
                <ul>

                    <li> <strong>Profile Id  </strong> <p>: @Model.ProfileId </p>  </li>
                    <li> <strong>Age </strong> <p>:  @Model.Age</p>  </li>
                    <li> <strong>Birth Date </strong> <p>: @Model.DOB </p>  </li>
                    <li> <strong>Gender </strong> <p>: @Model.Gender </p>  </li>
                    <li> <strong>MaritialStatus  </strong> <p> : @Model.MaritialStatus</p>  </li>
                    <li> <strong>Email </strong> <p>: @((Model.ShareCount >= 50 || Model.RequestStatus == "A" )? Model.EmailId : "View EmailId") </p>  </li>
                    <li> <strong>Mobile No </strong> <p>: @((Model.ShareCount >= 50 || Model.RequestStatus == "A" )? Model.MobileNo : "View Contact") </p>  </li>
                </ul>
            </div>
            <div class="user_title"><span> <img alt="matrimonial ek vivaah" src="/images/gallery.svg"></span> <p> Photos </p></div>
            <div class="details_gallery">
                <div class="demo-gallery">
                    <ul id="lightgallery" class="list-unstyled">
                        @foreach (var item in Model.lstImages)
                        {

                            <li data-src="@item.ImagePath">
                                <a href="">
                                    <img class="img-responsive" src="@item.ImagePath" />
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="user_title"> <span> <img alt="matrimonial ek vivaah" src="/images/books.svg"></span> <p>Education/Occupation Details </p></div>
            <div class="details">
                <ul>
                    <li> <strong>Qualification </strong> <p> : @Model.Degree</p>  </li>

                    <li> <strong>College Name  </strong> <p>: @Model.CollegeName  </p>  </li>
                    <li> <strong>Company Name  </strong> <p>: @Model.CompanyName </p>  </li>
                    <li> <strong>Designation </strong> <p>: @Model.Designation </p>  </li>
                    <li> <strong>Income </strong> <p>: @Model.Income </p>  </li>
                </ul>
            </div>

            <div class="user_title"><span> <img alt="matrimonial ek vivaah" src="/images/Native.svg"> </span>  <p>Native Location  </p></div>
            <div class="details">
                <ul>
                    <li> <strong>Address Line 1 </strong> <p> : @Model.Address1</p>  </li>
                    <li> <strong>Address Line 2 </strong> <p> : @Model.Address2</p>  </li>
                    <li> <strong>College Name </strong> <p>: @Model.CollegeName </p>  </li>
                    <li> <strong>City </strong> <p> : @Model.CityName</p>  </li>
                    <li> <strong>State </strong> <p> : @Model.StateName </p>  </li>
                    <li> <strong>Country </strong> <p>:  @Model.CountryName</p>  </li>
                    <li> <strong>Pincode </strong> <p>:  @Model.Pincode</p>  </li>
                </ul>
            </div>
            <div class="user_title"><span> <img alt="matrimonial ek vivaah" src="/images/team.svg"> </span> <p>Family Details </p></div>
            <div class="details">
                <ul>
                    <li> <strong>Father Name </strong> <p>: @Model.FatherName </p>  </li>
                    <li> <strong>Father Profession </strong> <p>:  @Model.FatherProfession</p>  </li>
                    <li> <strong>Mother Name </strong> <p>:  @Model.MotherName</p>  </li>
                    <li> <strong>Mother Profession </strong> <p>:  @Model.MotherProfession</p>  </li>
                    <li> <strong>State </strong> <p>:  @Model.StateName</p>  </li>
                    <li> <strong>Country </strong> <p>: @Model.CountryName </p>  </li>
                    <li> <strong>Pincode </strong> <p> : @Model.Pincode</p>  </li>
                </ul>
            </div>
            <div class="user_title"><span> <img alt="matrimonial ek vivaah" src="/images/team.svg"> </span> <p>Religion Details </p></div>
            <div class="details">
                <ul>
                    <li> <strong>Religion </strong> <p>: @Model.ReligionName </p>  </li>
                    <li> <strong>Cast </strong> <p>: @Model.CastName </p>  </li>
                    <li> <strong>Mother Tounge </strong> <p>: @Model.MotherTounge </p>  </li>
                    <li> <strong>Country of Birth </strong> <p> : @Model.BirthCountry</p>  </li>
                </ul>
            </div>
            <div class="user_title"> <span> <img alt="matrimonial ek vivaah" src="/images/books.svg"> </span> <p>Physical Status and Lifestyle </p></div>
            <div class="details">
                <ul>
                    <li> <strong>Height </strong> <p> : @Model.Height</p>  </li>
                    <li> <strong>Body Type </strong> <p>: @Model.BodyType </p>  </li>
                    <li> <strong>Skin Tone </strong> <p> : @Model.SkinTone</p>  </li>
                    <li> <strong>Blood Group </strong> <p>: @Model.BloodGroup </p>  </li>
                    <li> <strong>Smoke </strong> <p> : @Model.IsSmoke</p>  </li>
                    <li> <strong>Drink </strong> <p> : @Model.IsDrink</p>  </li>
                </ul>
            </div>
            <div class="user_title"> <span> <img alt="matrimonial ek vivaah" src="/images/books.svg"> </span> <p>Partner Preferences</p></div>
            <div class="details">
                <ul>
                    <li><strong>Age </strong> <p> : @Model.Age</p> </li>
                    <li><strong>Height </strong> <p> : @Model.Height</p> </li>
                    <li><strong>Maritial Status</strong> <p>: @Model.MaritialStatus</p></li>
                    <li><strong>Religion</strong> <p> : @Model.ReligionName</p> </li>
                    <li><strong>Community</strong> <p>: @Model.CastName</p> </li>
                    <li><strong>Mother Tounge</strong> <p> : @Model.MotherTounge</p> </li>
                    @*<li><strong>Diet</strong> <p> : </p></li>*@
                    <li><strong>Education</strong> <p> : @Model.Degree</p> </li>
                    <li><strong>Income</strong> <p> : @Model.Income</p> </li>
                </ul>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#lightgallery').lightGallery();

            if ($("#hdnCoverImagePath").val() != "") {
                $(".user-bg").css({
                    'background-image': 'url(' + $("#hdnCoverImagePath").val() + ')',
                    'background-repeat': 'no-repeat'
                });
            }
        });
    </script>
    <script src="~/Scripts/lightgallery-all.min.js"></script>
}


