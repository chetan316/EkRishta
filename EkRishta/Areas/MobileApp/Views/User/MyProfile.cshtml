@model Models.Custom.UserMaster

@{
    ViewBag.Title = "MyProfile";
}
<link href="~/Content/lightgallery.css" rel="stylesheet">
<script src="~/Scripts/CustomJs/ManageUser.js?rd=@ViewBag.JSRefNo"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="user_title Profile">
        <div class="back-arow"> <a href="#">  <img alt="ek vivaah " src="/images/back.svg"> </a></div>
        <p> My Profile</p>
    </div>
    <div class="table">
        <div>
            <div class="user-bg">
                <div class="user_sec">

                    <div class="bg-cover">
                        <a href="#"> Upload cover </a>
                    </div>

                    <div class="ProfilePic profile_centre">
                        <img id="imgProfilePic" alt="Profile" src="@Model.ProfilePicPath" />
                    </div>
                </div>
            </div>
            <div class="view-pro user_title besic_lik">
                <ul>
                    <li> <a href="#"> Basic </a> </li>
                    <li> <a href="#"> About </a> </li>
                    <li><a href="#"> Add Photo </a> </li>

                </ul>
            </div>
            <div class="clearfix"></div>
            <div class="user_title">
                <span><img alt="matrimonial ek vivaah" src="/images/user.svg"></span>
                <p> Basic Details</p>
                <a onclick="EditBasicDetails(this);">Edit</a>
            </div>
            <div class="details" id="divBasicDetails">
                @Html.Partial("_BasicDetails", Model.objUserBasicDetails)
            </div>

            <div class="user_title"><span> <img alt="matrimonial ek vivaah" src="/images/gallery.svg"></span> <p> Photos </p></div>
            <div class="details_gallery">
                <div class="demo-gallery">
                    <ul id="lightgallery" class="list-unstyled">
                        @foreach (var item in Model.lstImages)
                        {
                            <li data-src="@item.ImagePath">
                                <a href="">
                                    <img class="img-responsive" src="@item.ImagePath" style="width:154px;height:104px" />
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="user_title">
                <span><img alt="matrimonial ek vivaah" src="/images/books.svg"></span>
                <p>Education/Occupation Details </p>
                <a onclick="EditProfessionalDetails(this);">Edit</a>
            </div>
            <div class="details" id="divProfessionalDetails">
                @{Html.RenderPartial("_ProfessionalDetails", Model.objUserProfessionalDetails);}
            </div>

            <div class="user_title">
                <span><img alt="matrimonial ek vivaah" src="/images/Native.svg"></span>
                <p>Native Location</p>
                <a onclick="EditAddressDetails(this);">Edit</a>
            </div>
            <div class="details" id="divAddressDetails">
                @{Html.RenderPartial("_AddressDetails", Model.objUserAddressDetails);}
            </div>
            <div class="user_title">
                <span><img alt="matrimonial ek vivaah" src="/images/team.svg"></span>
                <p>Family Details </p>
                <a onclick="EditFamilyDetails(this);">Edit</a>
            </div>
            <div class="details" id="divFamilyDetails">
                @{Html.RenderPartial("_FamilyDetails", Model.objUserFamilyDetails);}
            </div>
            <div class="user_title">
                <span><img alt="matrimonial ek vivaah" src="/images/team.svg"></span>
                <p>Religion Details </p>
                <a onclick="EditReligionDetails(this);">Edit</a>
            </div>
            <div class="details" id="divReligionDetails">
                @{Html.RenderPartial("_ReligionDetails", Model.objUserReligionDetails);}
            </div>
            <div class="user_title">
                <span><img alt="matrimonial ek vivaah" src="/images/books.svg"></span>
                <p>Physical Status and Lifestyle </p>
                <a onclick="EditOtherDetails(this);">Edit</a>
            </div>
            <div class="details" id="divOtherDetails">
                @{Html.RenderPartial("_OtherDetails", Model.objUserOtherDetails);}
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#lightgallery').lightGallery();
    });
</script>
<script src="~/Scripts/lightgallery-all.min.js"></script>
