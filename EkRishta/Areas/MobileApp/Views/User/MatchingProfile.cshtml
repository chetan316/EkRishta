@model IEnumerable<Models.Custom.UserMaster>

@{
    ViewBag.Title = "MatchingProfile";
}

<script src="~/Scripts/CustomJs/ManageUser.js?rd=1"></script>
<h2>MatchingProfile</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="divMessage"></div>
    <div class="col-xs-12 col-sm-4 col-md-4">
        @{int ContactCount = 0;}
        @foreach (var item in Model)
        {
            <div class="MatchingProfilePic" style="margin-top:20px;">
                <img src="@item.ProfilePicPath" alt="ProfilePic" class="fl" />
            </div>
            <table>
                <tr>
                    <td>
                        <b>Name</b>&nbsp;:&nbsp;@item.FirstName @item.LastName
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Age</b>&nbsp;:&nbsp;@item.Age
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Height</b>&nbsp;:&nbsp;@item.Height
                    </td>
                <tr>
                    <td>
                        <b>Religion</b>&nbsp;:&nbsp;@item.ReligionName
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Community</b>&nbsp;:&nbsp;@item.CastName
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Mother Tounge</b>&nbsp;:&nbsp;@item.MotherTounge
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Education</b>&nbsp;:&nbsp;@item.Degree
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Profession</b>&nbsp;:&nbsp;@item.Designation
                    </td>
                </tr>
                <tr>
                    <td>
                        @if (item.RequestStatus == "A" || item.ShareCount >= 50)
                        {
                            ContactCount += 1;
                            <b>Contact No.&nbsp;&nbsp;</b>@item.MobileNo
                        }
                        else
                        {
                            <b>Contact No.</b><span>&nbsp;&nbsp;View Contact</span>
                        }
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Location</b>&nbsp;:&nbsp;@item.CityName
                    </td>
                </tr>
            </table>
            <div>

                @*@if (item.RequestStatus == "P")
                    {*@
                <input type="button" value="Cancel Request" id="btnCancelRequest_@item.UserId" onclick="SendRequest('@item.UserId');" class="btn btn-info @(item.RequestStatus=="P"?"displaybtn":"hidebtn")" />
                @*}*@
                @*@if (item.RequestStatus == "C" || item.RequestStatus == "N")
                    {*@
                <input type="button" value="Send Request" id="btnSendRequest_@item.UserId" onclick="SendRequest('@item.UserId');" class="btn btn-info @((item.RequestStatus=="C"||item.RequestStatus=="N")?"displaybtn":"hidebtn")" />
                @*}*@
                @if (item.RequestStatus == "A")
                {
                    <label>Accepted</label>
                }
            </div>
            <div class="clearfix"></div>

        }
    </div>
}